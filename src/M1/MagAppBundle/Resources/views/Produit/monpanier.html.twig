{# src/M1/MagAppBundle/Resources/views/Produit/index.html.twig #}

<html><body>
Liste de Produits

{% if is_granted ('IS_AUTHENTICATED_FULLY') %}
    <a href="/logout">Deconnecter</a>

{% else  %}
    <a href="/login">Connecter</a>

{% endif %}

<a href="/MonPanier">Voir Mon Panier</a>

<H1>Votre Panier</H1>
{{ user }}
{{ dump(commandes) }}

<h3>Liste de Vos Produit</h3>
<table  cellspacing="50" >
    <tr>




        <table cellpadding="50">
            <th>

            </th>
            <th></th>
            <th>Prix</th>
            <th>Quantite</th>
            {% set nombreProduit=0 %}
            {% set prixTotal=0 %}

            {% for commande in commandes %}
                {% set nombreProduit=nombreProduit+1 %}
                {% set prixTotal=prixTotal+(commande.produit.prix) %}

                <tr>
                <td>    <img src="http://i2.cdscdn.com/pdt2/3/7/1/1/700x700/del5397063620371/rw/dell-disque-dur-externe-2to-usb-3-0.jpg" height="100" >
                </td>
                <td>
                    <h3 style="color: #0000F0">{{ commande.produit.nom }}</h3>
                    <h3>{{ commande.produit.details }}</h3>
                     <a href="">Supprimer</a>
                    <a href="">Mèttre de Côte</a>

                </td>
                <td>

                 <h3 style="color:red"> EUR {{ commande.produit.prix }}</h3>
                </td>
                <td>


                </td>
            </tr>

        {% endfor %}
        </table>


        {% if (commandes != null) %}
            <div style="margin-left: 1100;margin-top: -400;height: 130;width: 230;background-color:#868686">
               <h4> Sous-Total:{{ nombreProduit }}</h4>
                <h3 style="color:red">EUR {{ prixTotal }}</h3>
                <a href="{{ path('m1_mag_app_choixadressepage') }}"><button id="commande" >Passez a la Commande</button></a>
            </div>

        {% endif %}
    </tr>

</table>
</body></html>