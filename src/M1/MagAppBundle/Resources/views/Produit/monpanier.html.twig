{# src/M1/MagAppBundle/Resources/views/Produit/monpanier.html.twig #}
{% extends 'M1MagAppBundle::Produit/base.html.twig' %}

{% block body %}

    <div id="content">
        <div class="container">



            <div class="col-md-9" id="basket">

                <div class="box">

                    <form method="post" action="checkout1.html">
                        {% set nombreProduit=0 %}
                        {% set prixTotal=0 %}
                        <h1>Votre panier</h1>
                        <p class="text-muted"></p>
                        <div class="table-responsive">
                            {%  if (commandes == []) %}
                                <p class="text-muted">VÃ´tre Panier est actuellement vide</p>

                            {%  else %}
                            <table class="table">
                                <thead>
                                <tr>
                                    <th colspan="2">Product</th>
                                    <th>Quantity</th>
                                    <th>Unit price</th>
                                    <th colspan="2">Total</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for commande in commandes %}
                                {% set nombreProduit=nombreProduit+1 %}
                                {% set prixTotal=prixTotal+(commande.produit.prix) %}
                                <tr>
                                    <td>
                                        <a href="#">
                                            <img src="{{ asset( commande.produit.image.url ) }}" alt="White Blouse Armani">
                                        </a>
                                    </td>
                                    <td><a href="#">{{ commande.produit.nom }}</a>
                                    </td>
                                    <td>
                                      <!--  <input type="number" value="2" class="form-control"> -->
                                        <select name="{{ commande.id }}" class="form-control">
                                            {% set itemselected = 0 %}
                                            {% for i in 1..commande.produit.quantite %}
                                                {% if i==commande.quantite %}
                                                    {% set itemselected = i %}

                                                    <option selected="selected">{{ i }}</option>
                                                {% else %}
                                                    <option value="{{ i }}">{{ i }}</option>

                                                {% endif %}
                                            {% endfor %}



                                        </select>
                                    </td>
                                    <td>{{ commande.produit.prix }}</td>
                                    <td></td>
                                    <td><a href="{{ path('m1_mag_app_supprimercommandepage',{'id':commande.id}) }}"><i class="fa fa-trash-o"></i></a>
                                    </td>
                                </tr>
                                {% endfor %}

                                </tbody>
                                <tfoot>
                                <tr>
                                    <th colspan="5">Total</th>
                                    <th colspan="2">$446.00</th>
                                </tr>
                                </tfoot>
                            </table>
                        {% endif %}

                        </div>
                        <!-- /.table-responsive -->

                        <div class="box-footer">
                            <div class="pull-left">
                                <a href="category.html" class="btn btn-default"><i class="fa fa-chevron-left"></i> Continier le shopping</a>
                            </div>
                            <div class="pull-right">
                            <!--    <button class="btn btn-default"><i class="fa fa-refresh"></i> Update basket</button> -->
                                {%  if (commandes != []) %}

                                <a href="{{ path('m1_mag_app_choixadressepage') }}"  class="btn btn-primary">Passer la Commande <i class="fa fa-chevron-right"></i></a>
                                {% endif %}
                                </button>
                            </div>
                        </div>

                    </form>

                </div>
                <!-- /.box -->



            </div>
            <!-- /.col-md-9 -->

            <div class="col-md-3">
                <div class="box" id="order-summary">
                    <div class="box-header">
                        <h3>Order summary</h3>
                    </div>
                    <p class="text-muted">Shipping and additional costs are calculated based on the values you have entered.</p>

                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                            <tr>
                                <td>Nombre de Produit</td>
                                <th>{{ nombreProduit }} </th>
                            </tr>

                            <tr class="total">
                                <td>Total</td>
                                <th>{{ prixTotal }}</th>
                            </tr>
                            </tbody>
                        </table>
                    </div>

                </div>

            </div>
            <!-- /.col-md-3 -->

        </div>
        <!-- /.container -->
    </div>
    <!-- /#content -->

{% endblock %}
