                    <div class="content">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="company">Nom</label>

                                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}

                                </div>
                            </div>

                        </div>
                        <!-- /.row -->

                        <div class="row">
                            <div class="col-sm-10">
                                <div class="form-group">
                                    <label for="company">Adresse</label>
                                    {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}

                                </div>
                            </div>

                        </div>
                        <!-- /.row -->

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="city">Ville</label>
                                    {{ form_widget(form.ville, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="zip">Region</label>
                                    {{ form_widget(form.region, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>


                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="phone">Code postal</label>
                                    {{ form_widget(form.codepostal, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="email">Pays</label>
                                    {{ form_widget(form.pays, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="email">Telephone</label>
                                    {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                        </div>
                        <!-- /.row -->
                    </div>

                    <div class="box-footer">

                        <div class="pull-right">

                             {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
            <!-- /.box -->


        </div>
