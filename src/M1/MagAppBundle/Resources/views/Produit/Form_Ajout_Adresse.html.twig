{% block body %}
    <div id="all">

    <div id="content">
    <div class="container">
        <div class="col-md-9" id="checkout">

            <div class="box">
                {{ form_start(form) }}
                {{ form_errors(form) }}

                <h1>Checkout</h1>
                    <ul class="nav nav-pills nav-justified">
                        <li class="active"><a href="#"><i class="fa fa-map-marker"></i><br>Ajout d'address</a>
                        </li>
