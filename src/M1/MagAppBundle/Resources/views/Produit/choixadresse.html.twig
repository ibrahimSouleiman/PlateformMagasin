{# src/M1/MagAppBundle/Resources/views/Produit/index.html.twig #}

{% extends 'M1MagAppBundle::Produit/base.html.twig' %}

{% block body %}
    <div id="all">

<div id="content">
    <div class="container">
        <div class="col-md-9" id="checkout">

            <div class="box">
                <form method="post" action="checkout2.html">
                    <h1>Etape : Choix d'adresse</h1>
                    <ul class="nav nav-pills nav-justified">
                        <li class="active"><a href="#"><i class="fa fa-map-marker"></i><br>Address</a>
                        </li>
                        <!--
                        <li class="disabled"><a href="#"><i class="fa fa-truck"></i><br>Delivery Method</a>
                        </li>
                        <li class="disabled"><a href="#"><i class="fa fa-money"></i><br>Payment Method</a>
                        </li>
                        -->
                        <li class="disabled"><a href="#"><i class="fa fa-eye"></i><br>Validé</a>
                        </li>
                    </ul>

                    <div class="content">
                        <div class="row">
                            {% if Adresses==[] %}
                                <p class="lead">Veuillez  <strong>ajouter une nouvelle adresse</strong>.</p>


                            {% endif %}

                      {% for adr in Adresses %}

                          <div class="col-md-3 col-sm-4">
                            <div class="product">
                                <div class="flip-container">
                                    <div class="flipper">
                                        <div class="front">
                                            <a href="detail.html">
                                                {{ adr.nom }}

                                            </a>
                                            {{ adr.adresse }}
                                        </div>


                                    </div>
                                </div>
                                <a href="detail.html" class="invisible">
                                    <img src="img/product1.jpg" alt="" class="img-responsive">
                                </a>
                                <div class="text">
                                    <h3><a href=""> {{ adr.ville}},{{ adr.codepostal}}</a></h3>
                                    <p class="price">{{ adr.pays }}</p>
                                    <p class="buttons">
                                        <a href="{{ path('m1_mag_app_panieradressepage',{'refadresse':adr.id}) }}" class="btn btn-default">Livre à cette Adresse</a>
                                        <a href="" class="btn btn-primary"><i class="fa fa-shopping-cart"></i>Supprime</a>
                                    </p>
                                </div>
                                <!-- /.text -->
                            </div>
                            <!-- /.product -->
                        </div>
               {% endfor %}
                        </div>

                    </div>
                    <div class="box-footer">
                        <div class="pull-left">
                            <a href="{{ path('m1_mag_app_addadressepage') }}" class="btn btn-default"><i class="fa fa-chevron-left"></i>Ajoute Adresse</a>
                        </div>
                        <div class="pull-right">
                            <button type="submit" class="btn btn-primary">Continue to Delivery Method<i class="fa fa-chevron-right"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <!-- /.box -->


        </div>
        <!-- /.col-md-9 -->

    </div>
</div>
    </div>

{% endblock %}