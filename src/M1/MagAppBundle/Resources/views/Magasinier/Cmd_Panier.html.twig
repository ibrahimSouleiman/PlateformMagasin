
{% extends "M1MagAppBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Index{% endblock %}

{% block body %}


<h3>Détails du panier</h3>

<table >
	<th>Panier</th>
	<th>Nom</th>
	<th>Prenom</th>
	<th>Etat</th>
	<th>Validé</th>
  <th>Description</th>

	{% for commande in Commandes %}
       <tr>
            <td> {{ commande.produit.nom }}   </td>
            <td> {{ commande.produit.reference }} </td>
            <td> {{ commande.produit.prix }} </td>
            <td> {{ commande.quantite }} </td>
       </tr>
    {% endfor %}

  </table>


<br/>
