{% extends "M1MagAppBundle::layout_Magasinier.html.twig" %}

{% block title %}{{ parent() }} - Index{% endblock %}

{% block body %}

<h3>Listes des paniers</h3>

<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
<thead>
	<th>Client</th>
	<th>Etat du Panier</th>
	<th>Détails </th>
	<th>Validé</th>
</thead>
<tbody>
	{% for panier in paniers %}
       <tr>
            <td> {{ panier.utilisateur.nom }} {{ panier.utilisateur.prenom }}  </td>
            <td> {{ panier.etat }} </td>
            <td> <a href="{{ path('details_panier', {'id': panier.id}) }}"> Détails </a> </td>
  <td> <a href="{{ path('valide_panier', {'id': panier.id}) }}" onclick="return confirm('Voulez-vous vraiment validez ?')" class="btn btn-info" role="button"> Validé </a> </td>

       </tr>
    {% endfor %}
</tbody>

  </table>

{% endblock %}