<div class="form">

    <ul class="tab-group">
        <li class="tab active"><a href="">Connexion</a></li>

    </ul>

    <div class="tab-signupsignup">
        <div id="login">
            <h1>Bienvenu!</h1>
            {% if error %}
                <div class="alert alert-danger" style="color: red">{{ error.message }}</div>
            <br></br>
            {% endif %}
            <form action="{{ path('login') }}" method="post">

                <div class="field-wrap">
                    <label>
                        Adresse Email<span class="req">*</span>
                    </label>
                    <input type="email" required id="username" name="_username" />
                </div>

                <div class="field-wrap">
                    <label>
                        Mot de Passe<span class="req">*</span>
                    </label>
                    <input type="password" required id="password" name="_password" autocomplete="off"/>
                </div>

                <p class="forgot"><a href="{{ path('register') }}">S'inscrire</a></p>

                <button type="submit" class="button button-block"/>Log In</button>

            </form>

        </div>

    </div><!-- tab-content -->

</div> <!-- /form -->
<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>



<script  src="{{ asset('template/js/index.js') }}"></script>




</body>
</html>
