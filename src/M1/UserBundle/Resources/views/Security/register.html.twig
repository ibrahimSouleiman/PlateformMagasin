{# src/M1/UserBundle/Resources/views/Security/login.html.twig #}
<!DOCTYPE html>
<html lang="en" >

<head>
    <meta charset="UTF-8">
    <title>Sign-Up/Login Form</title>
    <link href='https://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">


    <link rel="stylesheet" href="{{ asset('template/css/style.css') }}">


</head>
<body>

<div class="form">

    <ul class="tab-group">
        <li class="tab active"><a href="#signup">S"inscrire</a></li>
    </ul>

    <div class="tab-signupsignup">
        <div id="signup">
            <h1>Inscription</h1>
            {{ form_errors(form) }}

            {{ form_start(form)}}

                <div class="top-row">
                    <div class="field-wrap">

                        {{ form_widget(form.prenom, {'attr': {'class': 'btn btn-primary','required':'true','placeholder':'pr√©nom*'}}) }}
                        <div class="alert alert-danger" style="color: red">
                            {{ form_errors(form.prenom, {'attr': {'class': 'btn btn-primary','required':'true'}}) }}
                        </div>
                    </div>

                    <div class="field-wrap">

                        {{ form_widget(form.nom, {'attr': {'required':'true','placeholder':'nom*'}}) }}

                        <div class="alert alert-danger" style="color: red">
                            {{ form_errors(form.nom, {'attr': {'class': 'btn btn-primary','required':'true'}}) }}
                        </div>
                    </div>
                </div>

                <div class="field-wrap">

                    {{ form_widget(form.username, {'attr': {'class': 'btn btn-primary','required':'true','placeholder':'Adresse Email*'}}) }}

                    <div class="alert alert-danger" style="color: red">
                        {{ form_errors(form.username, {'attr': {'class': 'btn btn-primary','required':'true'}}) }}
                    </div>
                </div>
                <div class="field-wrap">


                    <div style="color: red">
                        {{ form_errors(form.password, {'attr': {'class': 'btn btn-primary','required':'true','placeholder':'*'}}) }}
                    </div>
                    {{ form_widget(form.password, {'attr': {'class': 'btn btn-primary','required':'true'}}) }}

                </div>
            <p class="forgot"><a href="{{ path('login') }}">Se Connecte</a></p>

            {{ form_widget(form.submit, {'attr': {'class': 'button button-block','required':'true'}}) }}

            {{ form_end(form) }}

        </div>

        </div><!-- tab-content -->

    </div> <!-- /form -->
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>



    <script  src="{{ asset('template/js/index.js') }}"></script>


</body>
</html>
